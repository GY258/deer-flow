services:
  backend:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: deer-flow-backend
    ports:
      - "8000:8000"  # 保留用于调试
    extra_hosts:
      - "host.docker.internal:host-gateway"
    env_file:
      - .env
    volumes:
      - ./conf.yaml:/app/conf.yaml:ro
    restart: unless-stopped
    networks:
      - deer-flow-network
    environment:
      # CORS配置 - 允许多个源
      - ALLOWED_ORIGINS=http://localhost:3000,http://app.lerna-ai.com,https://app.lerna-ai.com
      # BM25服务地址
      - BM25_SERVER_URL=http://host.docker.internal:5003

  frontend:
    build:
      context: ./web
      dockerfile: Dockerfile
      args:
        - NEXT_PUBLIC_API_URL=http://app.lerna-ai.com/api
    container_name: deer-flow-frontend
    # 移除公网端口暴露，只通过Nginx访问
    # ports:
    #   - "3000:3000"
    env_file:
      - .env
    depends_on:
      - backend
    restart: unless-stopped
    networks:
      - deer-flow-network
    environment:
      - NEXT_PUBLIC_API_URL=http://app.lerna-ai.com/api

networks:
  deer-flow-network:
    driver: bridge
